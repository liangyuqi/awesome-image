{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "lib": ["es6", "es2015", "es2016", "es2017", "dom"],
    "experimentalDecorators": true,
    "rootDir": "..",
    "baseUrl": "..",
    "types": [
      "node"
    ],
    "paths": {
      "amv/*": ["./src/*"],
      "amv": ["./src/index.ts"]
    },
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./**/*.ts"
  ]
}
